Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% products.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= product.id %> ">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<% if (product.discount) { %>
									<p class="product-detail-price small">
										<span>$<%= toThousand(product.price) %></span>
										
										<b><%= product.discount %>% OFF</b>
									</p>
									<p class="product-detail-price">
										$<%= toThousand(product.price * (1 - product.discount/100)) %>
									</p>
								<% } else { %>
									<p class="product-detail-price">
										$<%= toThousand(product.price)%>
									</p>
								<% } %>
								<p><%= product.name%> ></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
			
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>